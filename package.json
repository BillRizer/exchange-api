{
  "name": "exchange-api",
  "version": "1.0.0",
  "description": "simple exchange API",
  "main": "index.js",
  "author": "BillRizer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "start": "node ./dist/app.js",
    "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' --files  src/app.ts",
    "test": "jest",
    "test:watch": "jest --watchAll --collect-coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:create": "yarn typeorm migration:create ",
    "migration:generate": "yarn typeorm migration:generate -d src/data-source.ts -o src/database/typeorm/migration",
    "migration:run": "yarn typeorm migration:run -- -d src/data-source.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint ."
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "keywords": [
    "fastify"
  ],
  "dependencies": {
    "@fastify/env": "^4.3.0",
    "@types/conventional-commits-parser": "^3.0.6",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.3",
    "fastify": "^3.15.1",
    "fastify-env": "^2.1.1",
    "fastify-plugin": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@swc/core": "^1.3.105",
    "@swc/jest": "^0.2.31",
    "@tsconfig/node14": "^1.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/reflect-metadata": "^0.1.0",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^15.2.0",
    "nodemon": "^2.0.7",
    "prettier": "2.8.8",
    "sinon": "^11.1.1",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
