{
  "name": "exchange-api",
  "version": "1.0.0",
  "description": "simple exchange API",
  "main": "index.js",
  "author": "BillRizer",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "start": "node ./dist/index.js",
    "dev": "nodemon --watch './**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "jest",
    "test:watch": "jest --watchAll --collect-coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint ."
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  },
  "keywords": [
    "fastify"
  ],
  "dependencies": {
    "@fastify/env": "^4.3.0",
    "@types/conventional-commits-parser": "^3.0.6",
    "fastify": "^3.15.1",
    "fastify-env": "^2.1.1",
    "fastify-plugin": "^3.0.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@swc/core": "^1.3.105",
    "@swc/jest": "^0.2.31",
    "@tsconfig/node14": "^1.0.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.4",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^8.0.0",
    "jest": "^27.5.1",
    "lint-staged": "^15.2.0",
    "nodemon": "^2.0.7",
    "prettier": "2.8.8",
    "sinon": "^11.1.1",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
